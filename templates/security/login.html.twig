{% extends 'base.html.twig' %}
{% block title %}Se connecter !{% endblock %}
{% block body %}
<div class="jumbotron"><h1 class="text-center text-primary">Se connecter</h1></div>
<div class="container">
<div class="test">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
        {% endif %}
      <div class="card" style="width: 40%; margin-left: 30%; padding: 50px;">
        <h1 class="h3 mb-3 font-weight-normal text-primary">Veuillez vous connecter : </h1>
        <label for="inputUsername">Nom : </label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
        <label for="inputPassword">Mot de passe : </label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}
            <div class="checkbox mb-3">
                <label><input type="checkbox" name="_remember_me"> Remember me</label>
            </div>
            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
        <p style="margin-top: 20px;">Vous n'Ãªtes pas encore inscrit ?<a href="{{ path('register') }}"> S'inscrire</a></p>
        </div>
         
    </form>
    </div>
</div>

{% endblock %}

