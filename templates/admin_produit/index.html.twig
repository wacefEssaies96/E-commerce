{% extends 'base.html.twig' %}

{% block title %}Hello AdminProduitController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
<div class="example-wrapper">
<a class="btn btn-primary" href="{{ path('admin.ajouter') }}">Ajouter un nouveau produit</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom du produit</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td class="text-info" >{{produit.nom}}</td>
                <td><a class="btn btn-success" href="{{ path('admin.edit', {id : produit.id}) }}">Editer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
