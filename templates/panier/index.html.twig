{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<div class="container">
    <div class="jumbotron"> <h3 class="text-center text-primary">Panier</h3></div>
    <div class="text-info"><strong>Prix total {{ total }}</strong></div>
    {% for produit in panier %}
        
    <div class="card">
   
        <div class="card-body">
         {% if produit.filename %}
            <img class="float-right" src="/images/produits/{{ produit.filename }}" style="height:auto; width:300px;">
        {% endif %} 
            <div class="card-head">
                <h3 class="text-primary">{{ produit.nom }}</h3>
            </div>
             <strong><p class="text-success">Prix : {{ produit.prix }}</P></strong>
            <strong><p class="text-info">Quantit√© : {{ produit[0].qtt }}</P></strong>
            <strong>
                {% if produit[0].liv == 1 %}
                    <p class="text-info">Livraison : oui</p>
                {% endif %}
                {% if produit[0].liv == 0 %}
                    <p class="text-info">Livraison : non</p>
                {% endif %}
            </strong>
            <p>Description :  {{ produit.descProd }}</P>
        </div>
    </div>
{% endfor %}
</div>
{% endblock %}
