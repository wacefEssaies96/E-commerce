{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div>
        {% if name %}
            <p>Vous éte connecté en tant que : <strong class="text-primary">{{ name.getUserName }}</strong></p>
        {% endif %}
    </div>
   
    <div class="container-fluid" style="margin-top:80px">
  
        <div class="jumbotron">
            <h3 class="text-center text-info">Liste des produits disponible</h3>
        </div>
        
            {% for produit in list %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('produit.show', { id:produit.id , slug: produit.slug}) }}">{{produit.nom}}</a>
                            </h5>
                            <p class="text-success">{{produit.prix}}</p>
                        </div>
                    </div>
                </div>

            {% endfor %}
        
    </div>
    
{% endblock %}
